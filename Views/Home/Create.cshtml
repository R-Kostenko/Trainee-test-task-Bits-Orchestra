@using Trainee_Test.Resources;
@model Trainee_Test.Models.PersonDTO

@{
    ViewData["Title"] = "Create";
    var maritalStatuses = Enum.GetValues(typeof(MaritalStatus)).Cast<MaritalStatus>();
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" min="1900-01-01" max="2024-01-01" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MaritalStatus" class="control-label"></label>
                <select asp-for="MaritalStatus" class="form-control">
                    @foreach (var status in maritalStatuses)
                    {
                        <option value="@status.ToString()" selected="@(Model.MaritalStatus == status)">@status.GetEnumMemberValue()</option>
                    }
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" type="number" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group mt-4" style="width: 100%;
            display: inline-flex;
            justify-content: space-between;
            align-items: center;">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
